{
  "name": "nestjs-template",
  "version": "0.0.1",
  "description": "Nest.js template",
  "author": "rafaelscariot",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --detectOpenHandles --runInBand",
    "test:unit": "npm run test .*\\.unit.test\\.ts$",
    "test:e2e": "npm run test .*\\.e2e.test\\.ts$",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:cov": "jest --detectOpenHandles --runInBand --coverage",
    "build": "nest build",
    "migrate": "npm run build && typeorm migration:run -d dist/database/provider/datasource-options.provider.js",
    "seed": "ts-node -r tsconfig-paths/register test/seed/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.1",
    "@testdeck/jest": "^0.3.3",
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.15"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.4.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "functions": 80,
        "lines": 80,
        "statements": 80,
        "branches": 80
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1",
      "@database/(.*)": "<rootDir>/src/database/$1",
      "@auth/(.*)": "<rootDir>/src/auth/$1",
      "@user/(.*)": "<rootDir>/src/user/$1",
      "@test/(.*)": "<rootDir>/test/$1"
    },
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(controller|service|repository).ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
